<mvc:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:html="http://www.w3.org/1999/xhtml" controllerName="fpmdemo.ext.main.Main">
    <Page id="Main" title="{i18n&gt;MainTitle}">
        <content>
            <VBox id="myVBox" class="sapUiLargeMargin">
                <Panel id="myPanel1" headerText="Filter Bar" class="sapUiContentPadding">
                    <Text id="myText1" text="Filter: {fbConditions>/filtersTextInfo}" />
                    <macros:FilterBar metaPath="@com.sap.vocabularies.UI.v1.SelectionFields" id="myFilterBar" search=".handlers.onFiltersChanged" filterChanged=".handlers.onFiltersChanged"/>
                </Panel>
                <macros:Chart id="myChart" metaPath="@com.sap.vocabularies.UI.v1.Chart#MyChart" filterBar="myFilterBar" personalization="Type,Item,Sort" selectionMode="Single" selectionChange=".onSelectionChange"/>
                <Panel id="myPanel2" headerText="Additional Filter Bar Info" class="sapUiContentPadding">
                    <ce:CodeEditor id="myCodeEditor" value="{fbConditions>/allFilters}" height="350px" lineNumbers="false"></ce:CodeEditor>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>